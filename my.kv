<MyGrid>


    name:name
    last:last

    GridLayout:
        cols : 1
        size : root.width-200, root.height-200
        pos : 100,100
        GridLayout:
            cols : 2

            Label:
                text : 'First Name'
            TextInput:
                id: name
                multiline : False

            Label:
                text:'Last Name'
            TextInput:
                id:last
                multiline : False

        Button:

            text:'Submit'
            on_press:root.btn()


